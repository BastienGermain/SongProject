html, body {
  margin: 0;
  padding: 0;
  background: black;
}

* {
  box-sizing: border-box;
}

#viewport {
  overflow: hidden;
  height: 100vh;
  width: 100vw;
  perspective: 100vw;
}

#viewport section {
  height: 100vh;
  width: 100vw;
  position: absolute;
}

div.cube {
  transform-style: preserve-3d;
  width: 100vw;
  height: 100vh;
  margin: auto;
  position: absolute;
  transform: translateZ(50vw);
  transition: transform 1s ease-in-out;
  /*animation: rotation3d 3s ease-in-out infinite;*/
}

.cube > div {
  width: 100vw;
  position: absolute;
  height: 100%;
  border: 1px solid white;
  background: radial-gradient(ellipse at center, rgba(25, 25, 25, 0) 0%,rgba(25, 25, 25, 0.8) 100%);

}

.cube .front {
  transform: translateZ(50vw) rotateY(180deg);
  /*background-color: rgba(255, 0, 0, 0.5);*/
}

.cube .left {
  transform: translateX(50vw) rotateY(-90deg);
  /*background-color: rgba(0, 255, 0, 0.5);*/
}

.cube .back {
  transform: translateZ(-50vw);
  /*background-color: rgba(0, 0, 255, 0.5);*/
}

.arrow {
  position: absolute;
  color: white;
  top: calc(50% - 20px);
  margin: 20px;
  transition: all 1s;
}

.arrow:hover {
  color: purple;
  cursor: pointer;
}

