html, body {
  margin: 0;
  padding: 0;
  background: black;
}

* {
  box-sizing: border-box;
}

#viewport {
  overflow: hidden;
  height: 100vh;
  width: 100vw;
  perspective: 100vw;
}

#viewport section {
  height: 100vh;
  width: 100vw;
  position: absolute;
  perspective: inherit;
}

div.cube {
  transform-style: preserve-3d;
  width: 100vw;
  height: 100vh;
  margin: auto;
  position: absolute;
  /*transform: translateZ(50vw);*/
  transform-origin: 50vw 50vh 50vw;
  transition: transform 1s ease-in-out;
  /*animation: rotation3d 3s ease-in-out infinite;*/
}

.cube > div {
  width: 100vw;
  position: absolute;
  height: 100%;
  border: 1px solid white;
  backface-visibility: hidden;
  transform-style: initial;
}

.cube .lyrics__section {
  transform: translateZ(100vw) rotateY(180deg);
  /*background-color: rgba(255, 0, 0, 0.5);*/
}

.cube .list__section {
  transform: translateX(50vw) translateZ(50vw) rotateY(-90deg);
  /*background-color: rgba(0, 255, 0, 0.5);*/
}

.cube .search__section {
  /*background-color: rgba(0, 0, 255, 0.5);*/
}

.arrow {
  position: absolute;
  color: white;
  top: calc(50% - 20px);
  margin: 20px;
  transition: all 1s;
}

.arrow:hover {
  color: purple;
  cursor: pointer;
}

