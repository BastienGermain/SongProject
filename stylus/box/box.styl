}

@keyframes rotation3d {
  0% {
    transform: translateZ(50vw) rotateY(0deg);
  }
  49% {
    transform: translateZ(50vw) rotateY(90deg);
  }

  51% {
    transform: translateZ(50vw) rotateY(90deg);
  }

  100% {
    transform: translateZ(50vw) rotateY(180deg);
  }
}
