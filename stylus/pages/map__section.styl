.map__section
  display flex
  flex-direction column
  align-items: center
  justify-content: center
.map_sideBar
    display flex
    position absolute
    top 0px
    left 0px
    width 44px
    height 100%
    background-color rgba(255,255,255,0.8)
    justify-content center
    align-items center
    transition: all .5s
    cursor pointer
    &:hover
        width 100px
        .map__sideBarText
            transform: rotate(90deg) translateY(14px);
        .map__sideBarIcon
            transform: translateX(28px);
.map__sideBarText
    transition: all .5s
    position: absolute;
    transform: rotate(90deg) translateY(44px);
    width: 100vh;
    text-align: center;
.map__sideBarIcon
    transition: all .5s
    margin 10px
    transform: translateX(0px);
.window__museumName
    font-size: 25px !important;
.window__museumSchedules
    margin 15px 0px
.window__museumAddress
    margin-bottom 15px
.window__museumWebsite a
    font-size: 20px;
    display: flex;
    text-decoration: none;
    color: dimgray;
    align-items: center;
    &:hover
        color black