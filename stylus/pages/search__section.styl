.search__section
  display flex
  background: #24C6DC;
  background: -webkit-linear-gradient(to right, #514A9D, #24C6DC);
  background: linear-gradient(to right, #514A9D, #24C6DC);
  flex-direction column
  align-items: center
  justify-content: center
#search
  width: 50%
  max-width 500px
  height 50px
  padding 0 15px
  font-family Barlow Condensed
  font-size 20px
  font-weight bold
  text-align center
  color #514A9D
  background: none
  border none
  border-radius 5px
  background-color rgba(255, 255, 255, .5)
  //text-transform uppercase
  &:focus
    border none
    background-color white
  &::placeholder  
     color rgba(0, 0, 0, .25)
#submit
  font-family Barlow Condensed
  font-size 20px
  text-transform uppercase
  border 3px white solid
  border-radius 5px
  color white
  background none
  margin-top 20px
  padding 5px 10px
.search__logo
  font-size 50px
  color white
  margin-bottom 20px